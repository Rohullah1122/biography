<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userimageupdate"
            android:layout_width="215dp"
            android:layout_height="282dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:foregroundGravity="center"
            android:src="@drawable/profilepic" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp">

            <EditText
                android:id="@+id/txtnaamupdate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="24dp"
                android:inputType="textPersonName"
                android:hint="Enter your Name"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/xml_round_shape"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:drawableStart="@drawable/icon_user"
                />


            <EditText
                android:id="@+id/txtlnameupdate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="24dp"
                android:hint="Enter your Last Name"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/xml_round_shape"
                android:drawableStart="@drawable/icon_lastname"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:drawableLeft="@drawable/icon_lastname" />


            <EditText
                android:id="@+id/ptxtphoneupdate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="24dp"
                android:inputType="phone"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/xml_round_shape"
                android:drawableStart="@drawable/icon_phone"
                android:gravity="center"
                android:hint="Enter your phone Number"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:drawableLeft="@drawable/icon_phone" />



            <Spinner
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:background="@drawable/xml_round_shape"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:id="@+id/txtageupdate"
                android:gravity="center"
                />


            <TextView
                android:id="@+id/error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="gone"
                />



            <Button
                android:id="@+id/btn_profileupdate"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginBottom="168dp"
                android:background="@drawable/btn_style"
                android:gravity="center"
                android:text="Register"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                />


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>